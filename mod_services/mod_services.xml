				 name="img_column_1"
				 type="media"
				 label="Imagen"
				 description="Selecciona una imagen de 200x200px"
				 directory=""
				/>
            <field
             name="alt_text_1"
             type="text"
             label="Texto alternativo"
             description="Introduce un texto alternativo de la imagen"
             size="10"
            />
            <field
             name="btn_text_1"
             type="text"
             label="Texto del boton"
             description="Introduce un texto para el boton"
             size="10"
            />
            <field
             name="btn_url_1"
             type="menuitem"
